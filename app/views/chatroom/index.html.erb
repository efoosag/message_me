<h4 class="ui center aligned icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h4>

<div class="ui grid">
  <div class="twelve wide column">
    <div class="ui fluid card chatpage">
      <div class="content">
        <div class="ui feed"> 
        <% @messages.each do |message| %>         
          <div class="event">
            <div class="content">
              <div class="summary">              
                <em><%= message.user.username %></em>: <%= message.body %></br>              
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a Message...">
              <i class="bordered inverted orange icon edit"></i>
            </div>
          </div>         
        </form>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid card chatpage">
      <div class="content center aligned">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>      
    </div>
  </div>  
</div>
